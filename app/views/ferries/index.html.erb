<p id="notice"><%= notice %></p>

<h1>Listing Ferries</h1>

<table>
  <thead>
    <tr>
      <th>Email address</th>
      <th>Itinerary reference</th>
      <th>Reference term</th>
      <th>Name</th>
      <th>Confirmation number</th>
      <th>Item name</th>
      <th>Start date time</th>
      <th>End date time</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Street address</th>
      <th>Zip code</th>
      <th>Lat</th>
      <th>Long</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ferries.each do |ferry| %>
      <tr>
        <td><%= ferry.email_address %></td>
        <td><%= ferry.itinerary_reference %></td>
        <td><%= ferry.reference_term %></td>
        <td><%= ferry.name %></td>
        <td><%= ferry.confirmation_number %></td>
        <td><%= ferry.item_name %></td>
        <td><%= ferry.start_date_time %></td>
        <td><%= ferry.end_date_time %></td>
        <td><%= ferry.city %></td>
        <td><%= ferry.state %></td>
        <td><%= ferry.country %></td>
        <td><%= ferry.street_address %></td>
        <td><%= ferry.zip_code %></td>
        <td><%= ferry.lat %></td>
        <td><%= ferry.long %></td>
        <td><%= link_to 'Show', ferry %></td>
        <td><%= link_to 'Edit', edit_ferry_path(ferry) %></td>
        <td><%= link_to 'Destroy', ferry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ferry', new_ferry_path %>
